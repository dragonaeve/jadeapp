html
	head
		title Registration
		meta(name='viewport', content='initial-scale=1')
		link(href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/flatly/bootstrap.min.css", rel="stylesheet", integrity="sha384-gJWVjz180MvwCrGGkC4xE5FjhWkTxHIR/+GgT8j2B3KKMgh6waEjPgzzh7lL7JZT", crossorigin="anonymous")
		script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
		script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
		link(rel='stylesheet', href='../css/registration.css')
		script(type = 'text/javascript', src = 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
	body
		nav.navbar.navbar-expand-lg.navbar-dark(ng-controller='HeaderController')
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo03', aria-controls='navbarTogglerDemo03', aria-expanded='false', aria-label='Toggle navigation', style='')
				span.navbar-toggler-icon
			a.navbar-brand(href='/') Silencer
			a(href='/login')
				img.img-fluid(src='../assets/profesor.png', height='30', width='30')
			#navbarTogglerDemo03.collapse.navbar-collapse
				ul.navbar-nav.mr-auto.mt-2.mt-lg-0
					li.nav-item
						a.nav-link(href='/')
							| Home
					li.nav-item
						a.nav-link(href='/incidents')
							| Incidents
					li.nav-item
						a.nav-link(href='/incidents/addData')
							| Add Entry
					li.nav-item
						a.nav-link(href='/dashboard')
							| Dashboard
					li.nav-item
						a.nav-link(href='/about')
							| About
					li.nav-item
						a.nav-link(href='/login')
							| Login
		.container-fluid
			.col-md-6.offset-md-3
				form(action='/register', style='border: 1px solid grey; align-self: center; margin-top: 100px; box-shadow: 7px 7px #f1f1f1; ;', method='POST')
					div(style='margin-bottom: 20px;')
						h2(align='center')
							i Sign Up
						i
							p  Please fill out the following details
						hr
						label
							b Username
						input(type='text', name='username', required='', placeholder='Enter Username', pattern='[^]+@[^]+[.][a-z]{2,63}$', aria-describedby='usernameHint')
						p#usernameHint.form__hint Username must be a valid Email ID
					div(style='margin-bottom: 20px;')
						label
							b Password
						input(type='password', name='password', required='', placeholder='Enter Password', minlength='8', aria-describedby='passwordHint')
						p#passwordHint.form__hint The password must be at least 8 characters long.
					div(style='margin-bottom: 20px;')
						label
							input(type='checkbox', name='terms')
							|  By creating an account you agree to our 
							a(href='#', style='color:blue;') Terms & Privacy
					.btn
						button.signupbtn(type='Submit') Sign Up
						button.cancelbtn(type='button') Cancel

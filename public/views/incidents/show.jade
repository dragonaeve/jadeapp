doctype html
html(lang='en')
	head
		#{title}
		link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
		link(href='https://bootswatch.com/4/flatly/bootstrap.min.css', rel='stylesheet', integrity='sha384-+YpxMU1QQywaQtI3dMQAwIcu0vVDuOREjQPC59qblQHg9nTdcrUXMPnanUaldUnY', crossorigin='anonymous')
		link(rel='stylesheet', href='../css/index.css')
		link(rel='stylesheet', href='//code.jquery.com/ui/1.12.1/theincident/base/jquery-ui.css')
		script(src='https://code.jquery.com/jquery-1.12.4.js')
		script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
			script(src='https://code.jquery.com/jquery-3.3.1.js')
				script(type='text/javascript', src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
		<style type ="text/css">
		include ../../css/index.css
		</style>
	body
		script(src='js/script.js')
		nav.navbar.navbar-expand-lg.navbar-dark(ng-controller='HeaderController')
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo03', aria-controls='navbarTogglerDemo03', aria-expanded='false', aria-label='Toggle navigation', style='')
				span.navbar-toggler-icon
			a.navbar-brand(href='/protected') Silencer
			a(href='/protected')
				img.img-fluid(src='../assets/profesor.png', height='30', width='30')
			#navbarTogglerDemo03.collapse.navbar-collapse
				ul.navbar-nav.mr-auto.mt-2.mt-lg-0
					li.nav-item
						a.nav-link(href='/protected')
							| Home
					li.nav-item.active
						a.nav-link(href='/incidents')
							| Incidents
							span.sr-only (current)
					li.nav-item
						a.nav-link(href='/incidents/addData')
							| Add Entry
		.container
			block content
				h1.
					Incident ID #{incident._id}
				p Date: #{incident.date}
				p State: #{incident.state}
				p City or County: #{incident.citycounty}
				p Address: #{incident.address}
				p Number Killed: #{incident.n_killed}
				p Number Injured: #{incident.n_injured}
				p Incident URL: #{incident.incident_url}
				p Source URL: #{incident.source_url}
				p Congressional District: #{incident.congressional_district}
				p Gun Type: #{incident.gun_type}
				p Incident Characteristics: #{incident.incident_characteristics}
				p Latitude: #{incident.latitude}
				p Longitude: #{incident.longitude}
				p Location Description: #{incident.location_description}
				p Number of Guns Involved: #{incident.n_guns_involved}
				p Notes: #{incident.notes}
				p Participant Age: #{incident.participant_age}
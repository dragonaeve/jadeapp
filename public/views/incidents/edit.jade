							| Search
					li.nav-item
						a.nav-link(href='/login')
							| Login		
		.container-fluid
			h1(align='center')
				Incident ID #{incident.incident_id}
			form(action='/incidents/#{incident._id}/edit',method='post',name='updateincident',enctype='application/x-www-form-urlencoded')
				p Incident ID: 
					input#inputincident_id(type='text', value='#{incident.incident_id}', name='incident_id')
				p Date: 
					input#inputDate(type='date', value='#{incident.date}', name='date')
				p State: 
					input#inputState(type='text', value='#{incident.state}', name='state')
				p City/County: 
					input#inputCityCounty(type='text', value='#{incident.city_or_county}', name='citycounty')
				p Address: 
					input#inputAddress(type='text', value='#{incident.address}', name='address')
				p Number of people killed: 
					input#inputKilled(type='text', value='#{incident.n_killed}', name='n_killed')
				p Number of people injured: 
					input#inputInjured(type='text', value='#{incident.n_injured}', name='n_injured')
				p Incident URL: 
					input#inputincident_url(type='text', value='#{incident.incident_url}', name='incident_url')
				p Source URL: 
					input#inputsource_url(type='text', value='#{incident.source_url}', name='source_url')
				p Congressional district: 
					input#inputcongressional_district(type='text', value='#{incident.congressional_district}', name='congressional_district')
				p Gun type: 
					input#inputgun_type(type='text', value='#{incident.gun_type}', name='gun_type')
				p Latitude: 
					input#inputlatitude(type='text', value='#{incident.latitude}', name='latitude')
				p Longitude: 
					input#inputlongitude(type='text', value='#{incident.longitude}', name='longitude')
				p Number of guns involved: 
					input#inputn_guns_involved(type='text', value='#{incident.n_guns_involved}', name='n_guns_involved')
				p Sources: 
					input#inputsources(type='text', value='#{incident.sources}', name='sources')
				p State House District: 
					input#inputstate_house_district(type='text', value='#{incident.state_house_district}', name='state_house_district')
				p State Senate District: 
					input#inputstate_senate_district(type='text', value='#{incident.state_senate_district}', name='state_senate_district')
				p 
					input(type='hidden',value='PUT',name='_method')
				p 
					button#btnSubmit(type='submit').
						Update
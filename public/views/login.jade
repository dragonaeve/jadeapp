doctype html
html
    head
        meta(name='viewport', content='initial-scale=1')
        link(rel='stylesheet', href='../css/login.css')
        style.
            body {font-family: Arial, Helvetica, sans-serif;}
            form {border: 3px solid #f1f1f1; width: 50%; text-align: center; margin-left: 350px;}

            button {
                background-color: lightgreen;
                color: white;
                padding: 14px 20px;
                margin: 8px;
                border: none;
                cursor: pointer;
                width: 50%;
            }

            button:hover {
              opacity: 0.8;
            }

            input[type=text], input[type=password]{
              width : 30%;
              padding: 12px 20px;
              margin: 2%;
              display: inline-block;
              border: none;
              box-sizing: border-box;
              background: #f1f1f1;
            }

            .container {
              padding: 20px;
            }

            .pwdcontainer {
              padding: 16px;
            }

            .imgcontainer {
                text-align: center;
                margin: 12px;
            }

            img.avatar {
                width: 40%;
                border-radius: 50%;
            }

            .cancelbtn {
                width: 50%;
                padding: 12px 18px;
                background-color: #f44336;
            }

    body
        h2(align='center')
            i Login Form
        form(action='/login', style='margin-top: 10px; box-shadow: 7px 7px #f1f1f1;' method = "POST")
            .container
                label(for='username')
                    b Username
                input(type='text', placeholder='Enter Username', name='username', required)
            .pwdcontainer
                label(for='psw')
                    b Password
                input(type='password', placeholder='Enter Password', name='password', required)
            div
                input(style='margin: 10px;', type='checkbox', checked='checked', name='remember')
                |  Remember me
            br
            div
                span.psw(style='margin-left: 30px;')
                    a(href='#') Forgot password ?
            div
                label
                    button(type='Submit') Login
